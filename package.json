{
  "name": "trading-risk-calculator",
  "version": "1.0.0",
  "author": "LP <info@loganpinney.com>",
  "description": "Professional Trading Risk Calculator",
  "main": "build/electron.js",
  "homepage": "loganpinney.com",
  "private": true,
  "dependencies": {
    "electron-is-dev": "^2.0.0"
  },
  "scripts": {
    "electron": "electron .",
    "electron:dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "build": "react-scripts build",
    "postbuild": "cp public/electron.js build/ && cp public/preload.js build/"
  },
  "build": {
    "appId": "com.tradingapp.riskcalculator",
    "productName": "Trading Risk Calculator",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.finance",
      "target": "dmg"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}